package {	import flash.display.MovieClip;	public class FireBreath extends MovieClip	{		public var angle:Number;		public var countsLeft:int;		public static const COST = 26;		public function FireBreath(posX:int, posY:int, theAngle:Number)		{			x = posX;			y = posY;			angle = theAngle;			countsLeft = 20;		}		public function updateAngle(angle:Number):void		{			rotation = angle * 180 / Math.PI;			countsLeft--;		}	}}