package {	import flash.display.MovieClip;	import flash.events.TimerEvent;	import flash.utils.Timer;	public class Hand extends MovieClip	{		public var realX:Number;		public var realY:Number;		public var speed:Number = 0;		public var angle:Number = 0;		public var holding:Boolean = false;		public var gameTimer:Timer;		public var stunDuration:int = 0;		public var slapEnabled:Boolean = false;		public static const DEFAULT_MULTIPLIER = 0.3;		public static const CATAPULT_MULTIPLIER = .03;		public static const HEAVY_ENEMY_MULTIPLIER = .18;		public static const SMALL_ENEMY_MULTIPLIER = .25;		public static const AURA_MULTIPLIER = .12;		public var multiplier:Number;		public var storedMultiplier:Number = DEFAULT_MULTIPLIER;		public function Hand(gameTimer:Timer, posX:int,posY:int)		{			gameTimer.addEventListener(TimerEvent.TIMER, onTick);			this.gameTimer = gameTimer;			x = posX;			y = posY;			realX = x;			realY = y;			multiplier = DEFAULT_MULTIPLIER;		}		public function onTick(e:TimerEvent)		{			//trace(multiplier);			var mousePX:Number = parent.mouseX;			var mousePY:Number = parent.mouseY;			angle = Calculate.doAngle(mousePX,realX,mousePY,realY);			speed = multiplier * Calculate.doDistance(mousePX,realX,mousePY,realY);			if (angle && stunDuration == 0)			{				realX +=  speed * Math.cos(angle);				realY +=  speed * Math.sin(angle);			}			else			{				stunDuration--;			}			x = realX;			y = realY;		}	}}