package {	import flash.display.MovieClip;	import flash.utils.Timer;	import flash.events.TimerEvent;	import flash.events.Event;	public class GoldCoin extends MovieClip	{		public var realX:Number;		public var realY:Number;		public var gameTimer:Timer;		public var xDir:Number;		public var yDir:Number;		public var angle:Number;		public var speed:Number;		public var acc:Number;		public var lastX:Number;		public var lastY:Number;		public var hand:Hand;		public var targetAngle:Number;		public var multiplier;		public function GoldCoin(gameTimer:Timer, hand:Hand, xCoord:int, yCoord:int)		{			this.hand = hand;			gameTimer.addEventListener(TimerEvent.TIMER,onTick);			this.gameTimer = gameTimer;			angle = Math.random() * 2 * Math.PI;			x = xCoord;			y = yCoord;			realX = x;			realY = y;			speed = 10;			acc = .25;		}		public function onTick(e:Event):void		{			targetAngle = Calculate.doAngle(hand.realX,realX,hand.realY,realY);			var speedX:Number = speed * Math.cos(angle) + acc * Math.cos(targetAngle);			var speedY:Number = speed * Math.sin(angle) + acc * Math.sin(targetAngle);			realX +=  speedX;			realY +=  speedY;			speed = Calculate.doDistance2(speedX,speedY);			if (speed > 30)			{				speed = 30;			}			angle = Calculate.doAngle2(speedX,speedY);			acc += .1;			x = realX;			y = realY;		}	}}