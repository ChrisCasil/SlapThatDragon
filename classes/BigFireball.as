package {	import flash.display.MovieClip;	import flashx.textLayout.formats.Float;	import flash.utils.Timer;	import flash.events.TimerEvent;	public class BigFireball extends MovieClip	{		public var angle:Number;		public var speed:Number;		public var gameTimer:Timer;		public static const COST = 74;				public function BigFireball(gameTimer:Timer, posX:int, posY:int, theAngle:Number, theSpeed)		{			gameTimer.addEventListener(TimerEvent.TIMER, onTick);			this.gameTimer = gameTimer;			x = posX;			y = posY;			speed = theSpeed;			angle = theAngle;		}		public function onTick(e:TimerEvent):void		{			x +=  speed * Math.cos(angle);			y +=  speed * Math.sin(angle);			isAtEdge();		}		public function isAtEdge():void		{						if (x < 0 || x > 1280 || y < 0 || y > 720)			{				if (parent)				{					gameTimer.removeEventListener(TimerEvent.TIMER,onTick);					parent.removeChild(this);				}			}		}	}}